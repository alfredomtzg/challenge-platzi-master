//- mixin
mixin cajafirst(titulo,contenido)
	.caja
		.caja__contenido
			h3=titulo
			p=contenido
			a Leer mas

mixin caja(imagen,titulo,contenido)
	.caja
		.caja__imagen: img(src="images/"+imagen, alt="Imagen muestra")
		.caja__contenido
			h3=titulo
			p=contenido
			a Leer mas